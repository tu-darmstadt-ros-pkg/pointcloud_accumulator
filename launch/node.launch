<?xml version="1.0"?>

<launch>

  <arg name="cloud_in" default="/colored_cloud" />
  <arg name="cloud_out" default="/pointcloud_accumulated" />
  
  <node pkg="pointcloud_accumulator" type="pointcloud_accumulator_node" name="pointcloud_accumulator_node"
        output="screen" respawn="true" >
    <remap from="cloud_in" to="$(arg cloud_in)" />
    <remap from="cloud_out" to="$(arg cloud_out)" />
  </node>
  
</launch>
